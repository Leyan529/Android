<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Switch
        android:id="@+id/enableBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="藍芽"
        android:textOff="關"
        android:textOn="開" />

    <Switch
        android:id="@+id/switchcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="顏色介面"
        android:textOff="關"
        android:textOn="開" />

    <LinearLayout
        android:id="@+id/layoutcolor"
        android:layout_width="wrap_content"
        android:layout_height="368dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="計 時 器:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/timerSpinner"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imagetimer"
                android:layout_width="75dp"
                android:layout_height="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textalarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鬧     鐘:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/alarmSpinner"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imagealarm"
                android:layout_width="75dp"
                android:layout_height="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textcall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="來     電:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/callSpinner"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imagecall"
                android:layout_width="75dp"
                android:layout_height="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textOncall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通 話 中:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/oncallSpinner"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageoncall"
                android:layout_width="75dp"
                android:layout_height="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textDropcall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未接電話:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/dropcallSpinner"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imagedroponcall"
                android:layout_width="75dp"
                android:layout_height="25dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>